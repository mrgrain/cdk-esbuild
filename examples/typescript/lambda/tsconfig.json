{
  "compilerOptions": {
    // Settings for Node.js >= 12.9.0
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2019",

    // Support some older packages
    "esModuleInterop": true,

    // Enable super strict setting
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,

    // Function code never has to be compiled outside zeit/ncc and ts-jest
    "rootDir": ".",
    "noEmit": true
  },
  "include": ["**/*.ts"],
  "exclude": ["cdk.out", "node_modules"]
}
